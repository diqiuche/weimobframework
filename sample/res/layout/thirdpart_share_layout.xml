<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信分享"
            android:textColor="#00ff33"
            android:textSize="24sp"
            android:layout_margin="5dp"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册到微信"
            android:id="@+id/share_weixin_register"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看已授权信息"
            android:id="@+id/share_weixin_oauth"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信分享"
            android:id="@+id/share_weixin"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ分享"
            android:textColor="#00ff33"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看QQ已经授权信息"
            android:id="@+id/share_qq_oauth"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ分享"
            android:id="@+id/share_qq"/>
        
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新浪微博分享"
            android:textColor="#00ff33"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看新浪微博已经授权信息"
            android:id="@+id/share_sina_oauth"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新浪微博 分享文字"
            android:id="@+id/share_sina_text"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新浪微博 分享图片Bitmap"
            android:id="@+id/share_sina_image_bitmap"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新浪微博 分享图片链接"
            android:id="@+id/share_sina_image_url"/>
        
    </LinearLayout>
</ScrollView>
