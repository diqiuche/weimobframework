<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textColor="#00ff33"
            android:textSize="24sp"
            android:layout_margin="5dp"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册到微信"
            android:id="@+id/login_weixin_register"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册结果："
            android:visibility="gone"
            android:id="@+id/login_weixin_register_result"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:id="@+id/login_weixin"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存微信信息"
            android:id="@+id/login_weixin_info_save"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空微信信息"
            android:id="@+id/login_weixin_info_clean"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取微信信息"
            android:id="@+id/login_weixin_info_read"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信已经登录信息"
            android:id="@+id/login_weixin_info"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ登录"
            android:textColor="#00ff33"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ登录"
            android:id="@+id/login_qq"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存QQ信息"
            android:id="@+id/login_qq_info_save"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空QQ信息"
            android:id="@+id/login_qq_info_clean"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取QQ信息"
            android:id="@+id/login_qq_info_read"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QQ已经登录信息"
            android:id="@+id/login_qq_info"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新浪微博登录"
            android:textColor="#00ff33"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"/>
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新浪微博登录"
            android:id="@+id/login_sina"/>
    </LinearLayout>
</ScrollView>
